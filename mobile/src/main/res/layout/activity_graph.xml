<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Graph">


    <ImageView
        android:id="@+id/iv_graph_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/dreamember_icon15" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_graph_comment"
        android:layout_below="@+id/iv_graph_logo"
        android:text="@string/tv_graph_comment"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp" />


    <ImageView
        android:id="@+id/iv_graph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/iv_graph_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/dreamember_graph2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_graph_title"
        android:layout_below="@id/iv_graph"
        android:text="@string/tv_profile_graph"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>