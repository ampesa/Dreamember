<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SingleTip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_tip_details">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tip_title"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/tv_tip_title"
            android:layout_marginHorizontal="20dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_graph_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/dreamember_icon15" />

        <ImageView
            android:id="@+id/iv_tip_imgage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tip_title"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:src="@mipmap/dreamember_sleep1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tip_content"
            android:layout_below="@+id/iv_tip_imgage"
            android:text="@string/tv_tips_tip_content"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>




    </RelativeLayout>

</ScrollView>